{
  "title": "Energize",
  "description": "Energize ReST Definition",
  "type": "object",
  "properties": {
    "tables": {
      "title": "Resource set",
      "type": "array",
      "items": {
        "properties": {
          "name": {
            "description": "The name of the resource",
            "type": "string"
          },
          "resource": {
            "description": "True if this defines a resource; false if it defines a table",
            "type": "boolean"
          },
          "protection": {
            "description": "Optional array of user groups who can access the resource",
            "type": "array",
            "items": "string"
          },
          "bases": {
            "description": "Array of path bases for auto-generated routes",
            "type": "array",
            "items": "string"
          },
          "fields": {
            "title": "Field set",
            "type": "array",
            "items": {
              "properties": {
                "name": {
                  "description": "The name of the field",
                  "type": "string"
                },
                "type": {
                  "description": "The data type of the field",
                  "type": "object",
                  "properties": {
                    "category": {
                      "description": "Category of type",
                      "type": "string",
                      "enum": [
                        "primitive",
                        "array",
                        "one-to-many",
                        "many-to-many"
                      ]
                    },
                    "type": {
                      "description": "Primitive type or type parameter",
                      "type": "string"
                    },
                    "parameters": {
                      "description": "Optional type parameters",
                      "type": "array"
                    }
                  }
                },
                "modifiers": {
                  "description": "Modifier set",
                  "type": "array",
                  "items": "string",
                  "enum": [
                    "required",
                    "optional",
                    "unique",
                    "indexed"
                  ]
                }
              }
            }
          },
          "groups": {
            "description": "Access control groups",
            "type": "array",
            "items": "string"
          }
        }
      }
    },
    "routes": {
      "title": "Custom routes set",
      "type": "array",
      "items": {
        "properties": {
          "base": {
            "description": "Optional base path",
            "type": "string"
          },
          "protection": {
            "description": "Optional protection applied to all mappings",
            "type": "string"
          },
          "mappings": {
            "description": "Route mappings",
            "type": "array",
            "items": {
              "properties": {
                "method": {
                  "description": "HTTP method name",
                  "type": "string"
                },
                "path": {
                  "description": "Request path matcher",
                  "type": "string"
                },
                "action": {
                  "description": "Optional action expression",
                  "type": "string"
                },
                "language": {
                  "description": "Action language (only needed if 'action' property present)",
                  "type": "string",
                  "enum": ["ECMAScript", "ESL"]
                },
                "protection": {
                  "description": "Optional protection applied to implied mapping",
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}