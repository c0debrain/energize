table users
	unique string username
	secret string password
	string firstname
	string lastname
	unique string email

api users
	GET    :username          get( username )
	POST                      append()                      // JSON message body is sent to all actions, so 'append()' gets the user info that way
	DELETE :id                delete( id )
	GET    list               listAll()
	GET    browse             listBy( sortBy )              // 'sortBy' is a query parameter